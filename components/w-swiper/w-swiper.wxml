<!--components/w-swiper/w-swiper.wxml-->
<!-- 1.展示轮播图 -->
<swiper class="swiper"
        circular="{{ true }}"
        autoplay="{{ true }}"
        interval="3000"
        duration="300"
        indicator-dots="{{ true }}"
        indicator-active-color="#ff5777">
  <block wx:for="{{ list }}" wx:key="{{ index }}">
    <swiper-item class="swiper-item">
      <image src="{{ item.image }}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>